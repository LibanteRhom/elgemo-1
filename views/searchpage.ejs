<title>Search for <%= searches %> | Elgemo</title>
    
    <%- include('include/header.ejs') %> <!-- GETS THE HEADER -->

    <div class="top-content">
        <h3>Search for Movies</h3>
    </div>
    <main id="main">

        <% if (movie.length < 1) { %>
            <p>
                No search results for "<%= searches %>"
            </p>
            <% } %>

            <% for (var i = 0 ; i < movie.length ; i++) { %>
                <div class="movie">
        
                    <a href="/frontpage/<%= movie[i].id %>">
                        <img src="<% if (movie[i].primaryImage.url === null){ movie[i].titleText.text } else { movie[i].primaryImage.url } %>" alt="<%= movie[i].titleText.text %>"/>
                    </a>
                        <div class="movie-info">
                        <h3><%= movie[i].titleText.text %></h3>
                    </div>
                     <div class="overview">
                    <a href="/frontpage/<%= movie[i].id %>">
                        <h3>Overview:</h3>
                     </a>
                    <!-- <%= movie[i].description %> -->
                        <button>
                            save
                        </button>
                    </div>
                </div>
        
                <% } %>
    
       </main>

   <script src="js/frontpagejs.js"></script>
</body>
</html>